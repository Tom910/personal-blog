---
import Logo from "./Logo";
import Icon from "astro-icon";
import type { Collection } from "types";

interface Props {
  subitem?: Collection;
}

const { subitem } = Astro.props;
---

<div class="pb-4 text-sm flex items-center justify-between select-none">
  <a href={`/${subitem ?? ""}`} class="flex items-center">
    <Icon class="w-4 mr-2" name="ph:arrow-left" />
    <span class="flex-1 capitalize">{subitem ?? "Home"}</span>
  </a>
  <div class="flex items-center">
    <a href="/" title="Home"><Logo /></a>
  </div>
</div>
